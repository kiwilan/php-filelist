{
    "name": "kiwilan/php-filelist",
    "description": "PHP package for recursive file listing, exportable in JSON format.",
    "keywords": [
        "kiwilan",
        "php",
        "file"
    ],
    "homepage": "https://github.com/kiwilan/php-filelist",
    "license": "MIT",
    "authors": [
        {
            "name": "Ewilan Rivi√®re",
            "email": "ewilan.riviere@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Kiwilan\\FileList\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiwilan\\FileList\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
